{
  "name": "mezcalmos",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve:customers": "vue-cli-service serve src/customers/main.js",
    "test:customers": "vue-cli-service serve --mode test --port 8080 src/customers/main.js",
    "emulate:customers": "node run --command emulate --app customers --emulate all",
    "emulate:customers:onlyFunctions":"node run --command emulate --app customers --emulate onlyFunctions",
    "deploy:customers": "node run --command deploy --app customers --mode production",
    "deploy:customers:test": "node run --command deploy --app customers --mode test",

    "serve:taxis": "vue-cli-service serve --port 8081 src/taxis/main.js",
    "test:taxis": "vue-cli-service serve --mode test --port 8081 src/taxis/main.js",
    "emulate:taxis": "node run --command emulate --app taxis --emulate all",
    "emulate:taxis:onlyFunctions":"node run --command emulate --app taxis --emulate onlyFunctions",
    "deploy:taxis": "node run --command deploy --app taxis --mode production",
    "deploy:taxis:test": "node run --command deploy --app taxis --mode test",
    
    "serve:deliveries": "vue-cli-service serve --port 8082 src/deliveries/main.js",
    "test:deliveries": "vue-cli-service serve --mode test --port 8082 src/deliveries/main.js",
    "emulate:deliveries": "node run --command emulate --app deliveries --emulate all",
    "emulate:deliveries:onlyFunctions":"node run --command emulate --app deliveries --emulate onlyFunctions",
    "deploy:deliveries": "node run --command deploy --app deliveries --mode production",
    "deploy:deliveries:test": "node run --command deploy --app deliveries --mode test",

    "serve:all": "npm-run-all --parallel serve:taxis serve:customers serve:deliveries",
    "test:all": "npm-run-all --parallel test:taxis test:customers test:delveries",
    "deploy:all": "node run --command deploy --app all --mode production",
    "deploy:all:test": "node run --command deploy --app all --mode test",
    "emulate:all": "node run --command emulate --app all --emulate all",
    "emulate:all:onlyFunctions": "node run --command emulate --app all --emulate onlyFunctions",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-regular-svg-icons": "^5.15.1",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fortawesome/vue-fontawesome": "^2.0.2",
    "core-js": "^3.6.5",
    "node-sass": "^5.0.0",
    "register-service-worker": "^1.7.1",
    "sass-loader": "^10.1.0",
    "vee-validate": "^3.4.5",
    "vue": "^2.6.11",
    "vue-moment": "^4.1.0",
    "vue-router": "^3.4.9",
    "vue2-google-maps": "^0.10.7",
    "vuex": "^3.6.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-pwa": "^4.5.9",
    "@vue/cli-service": "~4.5.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.2.2",
    "firebase": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
