{
  "name": "mezcalmos",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "emulator": "firebase emulators:start --only functions",
    "serve:drivers": "vue-cli-service serve src/drivers/main.js",
    "stage:drivers": "vue-cli-service serve --mode staging src/drivers/main.js",
    "emulate:drivers": "npm-run-all --parallel stage:drivers emulator",
    "build:drivers": "vue-cli-service build --dest ../dist/drivers src/drivers/main.js",  
    "deploy:drivers": "build:drivers; firebase deploy --only hosting target;",
    
    "build:customers": "vue-cli-service build --dest ../dist/customers src/customers/main.js",
    "serve:customers": "vue-cli-service serve src/customers/main.js",  
    "stage:customers": "vue-cli-service serve --mode staging src/customers/main.js",  
    "emulate:customers": "npm-run-all --parallel stage:customers emulator",
    "deploy:customers": "build:customers; firebase deploy --only hosting target;",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "core-js": "^3.6.5",
    "vue": "^2.6.11",
    "vue-router": "^3.4.9",
    "vuex": "^3.6.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.2.2",
    "vue-template-compiler": "^2.6.11",
    "firebase": "^8.0.0",
    "npm-run-all": "^4.1.5"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
