{
  "rules": {
    ".read": "false",
    ".write": "false",
    "notificationStatus": {
      "$orderType": {
        "$orderId": {
          "$driverId": {
            "read": {
              ".write": "$driverId === auth.uid"
            },
            "received": {
              ".write": "true"
            }
          }
        }
      }
    },
    "users": {
      ".read": "root.child('admins/' + auth.uid + '/authorized').val() === true",
      "$uid": {
        ".read": "$uid === auth.uid",
        "notificationInfo": {
          ".write": "$uid === auth.uid"
        },
        "info": {
          "language": {
            ".write": "$uid === auth.uid"
          },
          "photo": {
            ".write": "$uid === auth.uid"
          },
          "displayName": {
            ".write": "$uid === auth.uid"
          },
          "phone": {
            ".write": "$uid === auth.uid"
          },
          "taxiNumber": {
            ".write": "root.child('admins/' + auth.uid + '/authorized').val() === true"
          }
        },
        "savedLocations": {
          ".write": "$uid === auth.uid"
        },
        "auth": {
          ".read": "false",
          ".write": "false"
        }
      }
    },
    "customers": {
      "$uid": {
        ".read": "$uid === auth.uid",
        "cart": {
          ".write": "true"
        },
        "notificationInfo": {
          ".write": "$uid === auth.uid"
        },
        "versionNumber": {
          ".write": "$uid === auth.uid"
        }
      }
    },
    "taxiDrivers": {
      ".read": "root.child('admins/' + auth.uid + '/authorized').val() === true",
      "$uid": {
        ".read": "$uid === auth.uid",
        "notificationInfo": {
          ".write": "$uid === auth.uid"
        },
        "state": {
          "isLooking": {
            ".write": "$uid === auth.uid"
          }
        },
        "versionNumber": {
          ".write": "$uid === auth.uid"
        },
        "location": {
          ".write": "$uid === auth.uid"
        }
      }
    },
    "openOrders": {
      ".read": "root.child('taxiDrivers/' + auth.uid + '/state/authorizationStatus').val() === 'authorized' || root.child('admins/' + auth.uid + '/authorized').val() === true",
      "$orderType": {
        "$orderId": {
          "estimatedPrice": {
            ".read": "root.child('openOrders/' + $orderType + '/' + $orderId + '/customer/id').val() === auth.uid ",
            ".write": "root.child('openOrders/' + $orderType + '/' + $orderId + '/customer/id').val() === auth.uid "
          }
        }
      }
    },
    "inProcessOrders": {
      ".read": "root.child('admins/' + auth.uid + '/authorized').val() === true"
    },
    "orders": {
      ".read": "root.child('admins/' + auth.uid + '/authorized').val() === true",
      "$orderType": {
        "$orderId": {
          ".read": "(root.child('orders/' + $orderType + '/' + $orderId + '/status').val() === 'lookingForTaxi' && root.child('taxiDrivers/' + auth.uid + '/state/authorizationStatus').val() === 'authorized') || root.child('orders/' + $orderType + '/' + $orderId + '/customer/id').val() === auth.uid || root.child('orders/' + $orderType + '/' + $orderId + '/driver/id').val() === auth.uid",
          "driver": {
            "location": {
              ".write": "root.child('orders/' + $orderType + '/' + $orderId + '/driver/id').val() === auth.uid"
            }
          },
          "estimatedPrice": {
            ".write": "root.child('orders/' + $orderType + '/' + $orderId + '/customer/id').val() === auth.uid && root.child('orders/' + $orderType + '/' + $orderId + '/status').val() === 'lookingForTaxi'"
          }
        }
      }
    },
    "chat": {
      "$orderId": {
        ".read": "root.child('chat/' + $orderId + '/participants/' + auth.uid).exists()",
        "messages": {
          "$messageId": {
            ".write": "root.child('chat/' + $orderId + '/participants/' + auth.uid).exists()"
          }
        }
      }
    },
    "notifications": {
      "$userType": {
        "$uid": {
          ".write": "$uid === auth.uid",
          ".read": "$uid === auth.uid"
        }
      }
    },
    "pricePolicy": {
      ".read": "true",
      ".write": "false"
    },
    "admins": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "false"
      }
    },
    "adminChat": {
      ".read": "root.child('admins/' + auth.uid + '/authorized').val() === true",
      ".write": "false",
      "$userType": {
        "current": {
          "$uid": {
            ".read": "$uid === auth.uid",
            "$chatId": {
              "messages": {
                ".write": "$uid === auth.uid || root.child('admins/' + auth.uid + '/authorized').val() === true"
              },
              "admins": {
                ".write": "root.child('admins/' + auth.uid + '/authorized').val() === true"
              }
            }
          }
        },
        "past": {
          "$uid": {
            ".read": "$uid === auth.uid"
          }
        }
      }
    },
    "restaurants": {
      ".read": "root.child('admins/' + auth.uid + '/authorized').val() === true",
      ".write": "false",
      "info": {
        ".read": "true",
        "$uid": {
          "menu": {
            ".write": "$uid === auth.uid",
            "$itemid": {
              ".validate": "newData.hasChildren(['name', 'description', 'available', 'image', 'cost'])",
              "cost": {
                ".validate": "newData.isNumber()"
              },
              "options": {
                "chooseOne": {
                  "$optionId": {
                    ".validate": "newData.hasChildren(['optionName', 'options'])",
                    "optionName": {
                      ".validate": "newData.hasChildren(['en', 'es'])"
                    },
                    "optionDialogText": {
                      ".validate": "newData.hasChildren(['en', 'es'])"
                    },
                    "options": {
                      "$optionChoiceId": {
                        ".validate": "newData.hasChildren(['name', 'cost'])",
                        "cost": {
                          ".validate": "newData.isNumber()"
                        }
                      }
                    }
                  }
                },
                "chooseMany": {
                  "$optionId": {
                    ".validate": "newData.hasChildren(['name', 'cost'])",
                    "name": {
                      ".validate": "newData.hasChildren(['en', 'es'])"
                    },
                    "cost": {
                      ".validate": "newData.isNumber()"
                    }
                  }
                },
                "sides": {
                  "$optionId": {
                    ".validate": "newData.hasChildren(['name', 'cost'])",
                    "name": {
                      ".validate": "newData.hasChildren(['en', 'es'])"
                    },
                    "cost": {
                      ".validate": "newData.isNumber()"
                    }
                  }
                }
              }
            }
          },
          "state": {
            "open": {
              ".write": "$uid === auth.uid"
            }
          }
        }
      },
      "orders": {
        "$uid": {
          ".write": "false",
          ".read": "$uid === auth.uid"
        }
      }
    }
  }
}