{
  "rules": {
    ".read": "false",
    ".write": "false",
    "users": {
      ".read": "root.child('admins/' + auth.uid + '/authorized').val() === true",
      "$uid": {
        ".read": "$uid === auth.uid",
        "notificationInfo": {
          ".write": "$uid === auth.uid"
        },
        "info": {
          "language": {
            ".write": "$uid === auth.uid"
          },
          "photo": {
            ".write": "$uid === auth.uid"
          },
          "displayName": {
            ".write": "$uid === auth.uid"
          },
          "phone": {
            ".write": "$uid === auth.uid"
          }
        },
        "auth": {
          ".read": "false",
          ".write": "false"
        }
      }
    },
    "customers": {
      "info": {
        "$uid": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid",
          "notificationInfo": {
            ".write": "$uid === auth.uid"
          },
          "savedLocations": {
            ".write": "$uid === auth.uid"
          }
        }
      },
      "pastOrders": {
        "$uid": {
          ".read": "$uid === auth.uid"
        }
      },
      "inProcessOrders": {
        "$uid": {
          ".read": "$uid === auth.uid",
          "$orderId": {
            "driver": {
              "location": {
                ".write": "root.child('customers/inProcessOrders/' + $uid + '/' + $orderId + '/driver/id').val() === auth.uid"
              }
            }
          }
        }
      }
    },
    "taxis": {
      ".read": "root.child('taxiAdmins/' + auth.uid + '/authorized').val() === true",
      "info" : {
        "$uid": {
          ".read": "$uid === auth.uid",
          "notificationInfo": {
            ".write": "$uid === auth.uid"
          },
          "details": {
            ".write": "root.child('taxiAdmins/' + auth.uid + '/authorized').val() === true"
          },
          "state": {
            "isLooking": {
              ".write": "$uid === auth.uid"
            }
          },
          "versionNumber": {
            ".write": "$uid === auth.uid"
          },
          "location": {
            ".write": "$uid === auth.uid"
          }
        }
      },
      "inProcessOrders": {
        "$uid": {
          ".read": "$uid === auth.uid"
        }
      },
      "pastOrders": {
        "$uid": {
          ".read": "$uid === auth.uid"
        }
      }
    },
    "orders": {
      ".read": "root.child('admins/' + auth.uid + '/authorized').val() === true || root.child('deliveryAdmins/' + auth.uid + '/authorized').val() === true",
      "inProcess": {
        "taxi": {
          "$orderId": {
            "driver": {
              "location": {
                ".write": "root.child('orders/inProcess/taxi/' + $orderId + '/driver/id').val() === auth.uid"
              }
            }
          }
        }
      },
      "past": {},
      "open" : {
        ".read": "true",
        "taxi": {
          "$orderId": {
            "estimatedPrice": {
              ".write": "root.child('orders/open/taxi/' + $orderId + '/customer/id').val() === auth.uid"
            }
          }
        }
      }
    },
    "chat": {
      "$orderId": {
        ".read": "root.child('chat/' + $orderId + '/participants/' + auth.uid).exists() || root.child('taxiAdmins/' + auth.uid + '/authorized').val() === true || root.child('deliveryAdmins/' + auth.uid + '/authorized').val() === true",
        "messages": {
          "$messageId": {
            ".write": "root.child('chat/' + $orderId + '/participants/' + auth.uid).exists()"
          }
        }
      }
    },
    "notifications": {
      "$userType": {
        "$uid": {
          ".write": "$uid === auth.uid",
          ".read": "$uid === auth.uid"
        }
      }
    },
    "taxiAdmins": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid && root.child('taxiAdmins/' + $uid).exists()"
      }
    },
    "deliveryAdmins": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid && root.child('deliveryAdmins/' + $uid).exists()"
      }
    },
    "adminChat": {
      ".read": "root.child('admins/' + auth.uid + '/authorized').val() === true",
      ".write": "false",
      "$userType": {
        "current": {
          "$uid": {
            ".read": "$uid === auth.uid",
            "$chatId": {
              "messages": {
                ".write": "$uid === auth.uid || root.child('admins/' + auth.uid + '/authorized').val() === true"
              },
              "admins": {
                ".write": "root.child('admins/' + auth.uid + '/authorized').val() === true"
              }
            }
          }
        },
        "past": {
          "$uid": {
            ".read": "$uid === auth.uid"
          }
        }
      }
    },
    "restaurants": {
      ".read": "root.child('deliveryAdmins/' + auth.uid + '/authorized').val() === true",
      ".write": "false",
      "info": {
        ".read": "true",
        "$uid": {
          "menu": {
            ".write": "$uid === auth.uid",
            "$itemid": {
              ".validate": "newData.hasChildren(['name', 'description', 'available', 'image', 'cost'])",
              "cost": {
                ".validate": "newData.isNumber()"
              },
              "options": {
                "chooseOne": {
                  "$optionId": {
                    ".validate": "newData.hasChildren(['optionName', 'options'])",
                    "optionName": {
                      ".validate": "newData.hasChildren(['en', 'es'])"
                    },
                    "optionDialogText": {
                      ".validate": "newData.hasChildren(['en', 'es'])"
                    },
                    "options": {
                      "$optionChoiceId": {
                        ".validate": "newData.hasChildren(['name', 'cost'])",
                        "cost": {
                          ".validate": "newData.isNumber()"
                        }
                      }
                    }
                  }
                },
                "chooseMany": {
                  "$optionId": {
                    ".validate": "newData.hasChildren(['name', 'cost'])",
                    "name": {
                      ".validate": "newData.hasChildren(['en', 'es'])"
                    },
                    "cost": {
                      ".validate": "newData.isNumber()"
                    }
                  }
                },
                "sides": {
                  "$optionId": {
                    ".validate": "newData.hasChildren(['name', 'cost'])",
                    "name": {
                      ".validate": "newData.hasChildren(['en', 'es'])"
                    },
                    "cost": {
                      ".validate": "newData.isNumber()"
                    }
                  }
                }
              }
            }
          },
          "state": {
            "open": {
              ".write": "$uid === auth.uid"
            }
          }
        }
      },
      "pastOrders": {
        "$uid": {
          ".read": "$uid === auth.uid"
        }
      },
      "inProcessOrders": {
        "$uid": {
          ".read": "$uid === auth.uid"
        }
      }
    }
  }
}